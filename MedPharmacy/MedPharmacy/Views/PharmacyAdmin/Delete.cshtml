@model MedPharmacy.Models.Register

@{
    //Layout = null;
}

    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
<style>
    .kt {
        width: 115px;
    }

    .bt {
        width: 115px;
    }

    .dld {
        margin-left: 100px;
        margin-top: 80px;
        margin-right: 100px;
        padding: 55px 100px;
        background-color: #f5f9fd;
        border: 0px;
        border-style: outset;
        box-shadow: 0px 0px 20px #d8d4d4;
        border-radius: 10px;
    }

    #mytable {
        margin-bottom: 20px;
    }

    .aa {
        margin-top: 60px;
    }
</style>
<body>
    <div class="dld">
        <h3>Are you sure you want to delete this?</h3>
        <table id="mytable" class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.PharmacyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Address)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.PharmacyName)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.PhoneNo)
                    </td>

                   
                    <td>
                        @Html.DisplayFor(model => model.Email)
                    </td>
                </tr>
            </tbody>



        </table>
       
       

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <center>


                <div class="form-actions no-color aa">
                    <input type="submit" value="Yes" class="btn btn-danger kt"/> |
                    @Html.ActionLink("No", "Index", null, new {@class = "btn btn-primary bt"})
                </div>
            </center>
        }
    </div>
        
</body>
