@{
    // Layout = null;
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Informations</title>
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet"/>
    <link href="~/Content/aos.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="//db.onlinewebfonts.com/c/7cc6719bd5f0310be3150ba33418e72e?family=Comic+Sans+MS" rel="stylesheet" type="text/css" />
    <link href="http://allfont.net/allfont.css?fonts=josefin-sans" rel="stylesheet" type="text/css" />
    <link href='https://fonts.googleapis.com/css?family=BioRhyme' rel='stylesheet'>
    <style>
        .site-blocks-cover {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            position: relative;
        }

            .site-blocks-cover, .site-blocks-cover > .container > .row {
                min-height: 500px;
                height: calc(88vh);
            }

                .site-blocks-cover.inner-page, .site-blocks-cover.inner-page .row {
                    min-height: 300px;
                    height: 500px;
                }

        @@media (max-width: 991.98px) {
            .site-blocks-cover .featured-hero-product {
                margin-top: 10%;
                position: absolute;
            }
        }

        .site-blocks-cover h1 {
            font-size: 60px;
            font-weight: bold;
            color: purple;
            margin-bottom: 30px;
            /*text-transform: uppercase;*/
        }

        @@media (min-width: 768px) {
            .site-blocks-cover h1 {
                font-size: 70px;
            }
        }

        .site-blocks-cover h1:hover {
            color: green;
        }


        .site-blocks-cover .intro-text {
            font-size: 16px;
            color: orangered;
            line-height: 1.5;
        }

        .site-blocks-cover.inner-page .site-block-cover-content {
            margin-top: 20%;
            text-align: center;
        }

        @@media (min-width: 768px) {
            .site-blocks-cover.inner-page .site-block-cover-content {
                margin-top: 30%;
            }
        }

        .site-blocks-cover .sub-title {
            color: orangered;
        }

        @@media (max-width: 991.98px) {
            .site-blocks-cover .img-1 {
                max-width: 400px;
                margin-left: auto;
                margin-right: auto;
            }
        }



        .banner-1 {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 20px;
            display: block;
            min-height: 360px;
            border-radius: 4px;
            -webkit-box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.2);
            box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.2);
            -webkit-transition: .3s all ease;
            -o-transition: .3s all ease;
            transition: .3s all ease;
            position: relative;
            top: 0;
            font-family: sans-serif;
        }

            .banner-1:hover {
                top: -10px;
                -webkit-box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.4);
                box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.4);
            }

            .banner-1 .banner-1-inner {
                width: 50%;
            }

                .banner-1 .banner-1-inner h2 {
                    color: black;
                    text-transform: uppercase;
                    font-weight: 900;
                }

                .banner-1 .banner-1-inner p {
                    /*color: rgba(0, 0, 0, 0.5);*/
                    color: red;
                    font-size: 1.2rem;
                }

        .site-section {
            padding: 2.5em 0;
        }

        @@media (min-width: 768px) {
            .site-section {
                padding: 5em 0;
            }
        }

        .site-section.site-section-sm {
            padding: 4em 0;
        }

        .site-section {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            position: relative;
        }

        #services {
            font-size: 45px;
            border-bottom-style: ridge;
            font-weight: bold;
            border-bottom-style: black;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="site-blocks-cover" style="background-image: url('../picture/information2.jpg');">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 mx-auto order-lg-2 align-self-center">
                    <div class=" animated flip site-block-cover-content text-center">

                        <h1 style="font-family: Josefin Sans; font-weight: bold">INFORMATIONS</h1>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" style="margin-bottom: 45px;">
        <div class="Sclass">
            <center>
                <div class="animated flipInX">
                    <strong id="services" class="animated shake" style="color: orange; font-family: BioRhyme; "><i class="fab fa-paypal"></i> Payment Information</strong>
                </div>

            </center>


        </div>
    </div>



    <div class="container">
        <div class="row align-items-stretch">
            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-up" data-aos-duration="2300">
                <a class="banner-1 h-100 d-flex" style="background-image: url('../picture/cash.png');">
                    <div class="banner-1-inner align-self-center">


                    </div>
                </a>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-down" data-aos-duration="2300">
                <a class=" banner-1 h-100 d-flex" style="background-image: url('../picture/bkash.jpg');">
                    <div class="banner-1-inner ml-auto  align-self-center">


                    </div>
                </a>
            </div>
        </div>
    </div>
    <script src="~/Scripts/aos.js"></script>
    <script>

        AOS.init();
    </script>
</body>
