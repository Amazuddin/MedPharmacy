@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeIndex</title>
   
    <link href="~/Content/fontawesome.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-all.min.css" rel="stylesheet" />
    <link href="~/Content/aos.css" rel="stylesheet"/>
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/animate.min.css" rel="stylesheet"/>
    <link href="//db.onlinewebfonts.com/c/7cc6719bd5f0310be3150ba33418e72e?family=Comic+Sans+MS" rel="stylesheet" type="text/css"/>
    <link href="http://allfont.net/allfont.css?fonts=josefin-sans" rel="stylesheet" type="text/css"/>
    <link href='https://fonts.googleapis.com/css?family=BioRhyme' rel='stylesheet'>
    <style>
        .site-blocks-cover {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            position: relative;
        }

            .site-blocks-cover, .site-blocks-cover > .container > .row {
                min-height: 500px;
                height: calc(90vh);
            }

                .site-blocks-cover.inner-page, .site-blocks-cover.inner-page .row {
                    min-height: 300px;
                    height: 500px;
                }

                .site-blocks-cover h2 {
                    font-size: 16px;
                    font-weight: bold;
                    color: orangered;
                    letter-spacing: .2em;
                    text-transform: uppercase;
                }

                    .site-blocks-cover h2:hover {
                        color: green;
                    }

        @@media (max-width: 991.98px) {
            .site-blocks-cover .featured-hero-product {
                margin-top: 10%;
                position: absolute;
            }
        }

        .site-blocks-cover h1 {
            font-size: 50px;
            font-weight: 900;
            color: orangered;
            margin-bottom: 30px;
            /*text-transform: uppercase;*/
        }

        @@media (min-width: 768px) {
            .site-blocks-cover h1 {
                font-size: 70px;
            }
        }

        .site-blocks-cover h1:hover {
            color: orange;
        }

        .site-blocks-cover p {
            color: orangered;
            font-size: 20px;
            line-height: 35px;
        }

        .site-blocks-cover .intro-text {
            font-size: 16px;
            color: orangered;
            line-height: 1.5;
        }

        .site-blocks-cover.inner-page .site-block-cover-content {
            margin-top: 20%;
            text-align: center;
        }

        @@media (min-width: 768px) {
            .site-blocks-cover.inner-page .site-block-cover-content {
                margin-top: 30%;
            }
        }

        .site-blocks-cover .sub-title {
            color: orangered;
        }

        @@media (max-width: 991.98px) {
            .site-blocks-cover .img-1 {
                max-width: 400px;
                margin-left: auto;
                margin-right: auto;
            }
        }

        .site-blocks-cover .btn {
            padding: 20px 30px;
            background: orange;
            border: orangered;
            color: white;
            font-size: 18px;
        }

            .site-blocks-cover .btn:hover {
                background: orangered;
            }





        .dia-center {
            height: 440px;
            margin: 10px;
            padding: 0px;
            text-align: center;
            box-shadow: 0px 0px 0px #888888;
        }

            .dia-center:hover {
                box-shadow: -1px 2px 18px #526152;
            }

        #services {
            font-size: 50px;
            border-bottom-style: ridge;
            font-weight: bold;
            border-bottom-style: black;
            margin-top: 15px;
        }

        .diagnostic-img {
            width: 100%;
            height: 320px;
        }

        .diagnoistic_name {
            font-size: 16px;
            margin-top: 5px;
            padding: 10px;
            text-align: center;
            /*height: inherit;*/
            color: black;
        }

        .banner-1 {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            padding: 20px;
            display: block;
            min-height: 300px;
            border-radius: 4px;
            -webkit-box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.2);
            box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.2);
            -webkit-transition: .3s all ease;
            -o-transition: .3s all ease;
            transition: .3s all ease;
            position: relative;
            top: 0;
            font-family: sans-serif;
        }

            .banner-1:hover {
                top: -10px;
                -webkit-box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.4);
                box-shadow: 0 10px 30px -15px rgba(0, 0, 0, 0.4);
            }

            .banner-1 .banner-1-inner {
                width: 50%;
            }

                .banner-1 .banner-1-inner h2 {
                    color: black;
                    text-transform: uppercase;
                    font-weight: 900;
                }

                .banner-1 .banner-1-inner p {
                    
                    color: red;
                    font-size: 1.2rem;
                }

        .site-section {
            padding: 2.5em 0;
        }

        @@media (min-width: 768px) {
            .site-section {
                padding: 5em 0;
            }
        }

        .site-section.site-section-sm {
            padding: 4em 0;
        }

        .site-section {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
            position: relative;
        }
    </style>
</head>
<body>



    <div class="site-blocks-cover" style="background-image: url('../picture/a.jpg');">
        <div class="container">
            <div class="row" >
                <div class="col-lg-7 mx-auto order-lg-2 align-self-center">
                    <div class="animated bounceInDown site-block-cover-content text-center">
                        <h2 style="font-family: Josefin Sans;" class="sub-title">Effective Medicine, New Medicine Everyday</h2>
                        <h1 style="font-family: Josefin Sans; font-weight: bold">WELCOME TO MedToDoor</h1>
                        <p>
                            <a style="font-family: Comic Sans MS" href="@Url.Action("Category","Medicine")" class="btn btn-primary px-5 py-3">Buy Now</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" style="margin-bottom: 50px;">
        <div class="Sclass">
            <center>
                <div class="animated zoomInDown">
                    <strong id="services" class="animated shake" style="color: blueviolet; font-family: BioRhyme">Services</strong>
                </div>

            </center>


        </div>
    </div>
    <div class="container" style="margin-bottom: 80px;">
        <div class="row" data-aos="flip-left"
             data-aos-easing="ease-out-cubic"
             data-aos-duration="2300">


            <div class="col-md-4">
                <a style="text-decoration: none;" href="@Url.Action("MedicineSearch","Medicine")">
                    <div class="dia-center">

                        <img src="~/picture/search.png" class="diagnostic-img">
                        <div class="diagnoistic_name">
                            <h2 style="font-family: BioRhyme">
                                Search Medicine
                            </h2>

                        </div>

                    </div>
                </a>
            </div>




            <div class="col-md-4">
                <a style="text-decoration: none;" href="@Url.Action("Category","Medicine")">
                    <div class="dia-center">

                        <img src="~/picture/category.png" class="diagnostic-img">
                        <div class="diagnoistic_name">
                            <h2 style="font-family: BioRhyme">
                                Find Categories
                            </h2>

                        </div>

                    </div>
                </a>
            </div>
            <div class="col-md-4">
                <a style="text-decoration: none;" href="@Url.Action("Informations","Medicine")">
                    <div class="dia-center">

                        <img src="~/picture/info2.png" class="diagnostic-img">
                        <div class="diagnoistic_name">
                            <h2 style="font-family: BioRhyme">
                                Informations
                            </h2>

                        </div>

                    </div>
                </a>
            </div>
        </div>
    </div>





<div class="site-section bg-secondary bg-image" style="background-image: url('../picture/c.png');">
    <div class="container">
        <div class="row align-items-stretch">
            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-up-right" data-aos-duration="2200">
                <a class="banner-1 h-100 d-flex" style="background-image: url('../picture/b.jpg');">
                    <div class="banner-1-inner align-self-center">
                        <h2 style="font-family: BioRhyme">Pharmacy Products</h2>
                        <p style="font-family: Josefin Sans;">
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Molestiae ex ad minus rem odio voluptatem.
                        </p>
                    </div>
                </a>
            </div>
            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-up-left" data-aos-duration="2200">
                <a class="banner-1 h-100 d-flex" style="background-image: url('../picture/sa.jpg');">
                    <div class="banner-1-inner ml-auto  align-self-center">
                        <h2 style="font-family: BioRhyme">Rated by Experts</h2>
                        <p style="font-family: Josefin Sans;">
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Molestiae ex ad minus rem odio voluptatem.
                        </p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
    <script src="~/Scripts/aos.js"></script>
    <script>

        AOS.init();
    </script>
</body>
</html>
